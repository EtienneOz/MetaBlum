% box dimension definition %
beginadjchar("2",5,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.2u#,space*0.2u#);

% construction %
x1=x5=leftstemloc;
x4=x6=x7=w-x1;
y2=y3=h;
y5=y6=0;
y7=bar4;
y1=y4=bar5;
z1=z2+whatever*dir(ang); 
z4=z3+whatever*dir(-ang); 

% draw %
draw z1--z2--z3--z4--z7--z5--z6;

penlabels(range 0 thru 30);

endchar;