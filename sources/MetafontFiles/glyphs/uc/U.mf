% box dimension definition %
beginadjchar("U",5,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);

% construction %
x1=x7=x9=leftstemloc;
x4=x10=x8=w-x1;
x2=.5w;
y8=y9=h;
y2=0;
y1=y4=bar2;
y7=y10=bar5;

% draw %
draw z9--z1..z2..z4--z8;

% composite glyphs %
charanchortops_[charcode]=(.5w,h+bar2);
charanchorbots_[charcode]=(.5w,0);

penlabels(range 0 thru 30);

endchar;
