% box dimension definition %
beginadjchar("B",5,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.35u#,space*0.25u#);

% construction %
x1=x2=x3=leftstemloc;
x4=.75w;
x5=w;
y1=leftstemloc;
y2=bar3;
y3=h;
y4=bar5;
y5=bar1;

% draw %
draw z1--z2--z3;
draw z3..z4..z2;
draw z2..z5..z1;

% composite glyphs %
charanchortops_[charcode]=(.5w,h+bar2);

penlabels(range 0 thru 30);

endchar;
