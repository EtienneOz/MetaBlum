% box dimension definition %
beginadjchar("M",6,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.35u#,space*0.35u#);

% construction %
x1=x2=leftstemloc;
x5=x4=w-x1;
x3=.5w;
y2=y4=h;
y1=y5=0;
y3=bar3;
% z4=z3+whatever*dir(ang);

% draw %
draw z1--z2--z3--z4--z5;

% composite glyphs %
charanchortops_[charcode]=(.5w,h+bar2);

penlabels(range 0 thru 30);

endchar;