% box dimension definition %
beginadjchar("G",5,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.25u#);

% construction %
x0=.5w;
x1=x5=w;
x2=x4=.5w;
x3=leftstemloc;
y0=bar3;
y3=bar3;
y1=bar2;
y2=leftstemloc;
y4=h;
y5=bar5;


% draw %
draw z0..z1..z2..z3..z4..z5;

% composite glyphs %
charanchortops_[charcode]=(.5w,h+bar2);

penlabels(range 0 thru 30);

endchar;
