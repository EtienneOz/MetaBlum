% box dimension definition %
beginadjchar("Z",5,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.15u#,space*0.15u#);

% construction %
x1=x3=leftstemloc;
x4=x2=w-x1;
y1=y2=0;
y3=y4=h;

% draw %
draw z3--z4--z1--z2;

% composite glyphs %
charanchortops_[charcode]=(.5w,h+bar2);
 
penlabels(range 0 thru 30);

endchar;