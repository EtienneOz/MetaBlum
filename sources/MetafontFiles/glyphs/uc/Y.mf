% box dimension definition %
beginadjchar("Y",5,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.05u#,space*0.05u#);

% construction %
x3=leftstemloc;
x4=w-x3;
x1=x2=.5w;
y3=y4=h;
y1=0;
y2=bar3;

% draw %
draw z1--z2--z3;
draw z2--z4; 

% composite glyphs %
charanchortops_[charcode]=(.5w,h+bar2);

penlabels(range 0 thru 30);

endchar;