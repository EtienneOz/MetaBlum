% box dimension definition %
beginadjchar("T",5,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.05u#,space*0.05u#);

% construction %
x3=leftstemloc;
x4=w-x3;
x2=x1=.5w;
y3=y2=y4=h;
y1=0;

% draw %
draw z1--z2;
draw z3--z4;

% composite glyphs %
charanchortops_[charcode]=(.5w,h+bar2);
charanchorbots_[charcode]=(.5w,0);

penlabels(range 0 thru 30);

endchar;