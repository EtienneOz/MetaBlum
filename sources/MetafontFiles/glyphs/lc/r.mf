% box dimension definition %
beginadjchar("r",3,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.15u#);

% construction %
x1=x2=x3=x10=leftstemloc;
x5=w-x1;
y2=y8=0;
y10=y7=bar1;
y3=bar2;
y1=y4=y5=bar3;
z3=z4+whatever*dir(ang); 

% draw %
draw z3--z4--z5;
draw z1--z2;

% composite glyphs %
charanchortops_[charcode]=(.5w,5/6cap);

penlabels(range 0 thru 30);

endchar;