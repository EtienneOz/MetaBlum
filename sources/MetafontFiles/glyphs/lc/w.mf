% box dimension definition %
beginadjchar("w",6,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.15u#,space*0.15u#);

% construction %
x1=leftstemloc;
x5=w-x1;
x3=.5(x1+x5);
x2=.5(x3+x1);
x4=.5(x3+x5);
y2=y4=0;
y1=y3=y5=bar3;

% draw %
draw z1--z2--z3--z4--z5;

% composite glyphs %
charanchortops_[charcode]=(.5w,5/6cap);

penlabels(range 0 thru 30);;

endchar;