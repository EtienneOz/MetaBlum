% box dimension definition %
beginadjchar("u",5,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.25u#,space*0.25u#);

% construction %
x1=x2=leftstemloc;
x5=x6=w-x1;
y3=y4=0;
y2=y5=bar1;
y1=y6=bar3;
z2=z3+whatever*dir(-ang); 
z4=z5+whatever*dir(ang); 

% draw %
draw z1--z2--z3--z4--z5--z6;

% composite glyphs %
charanchortops_[charcode]=(.5w,5/6cap);

penlabels(range 0 thru 30);

endchar;