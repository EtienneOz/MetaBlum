% box dimension definition %
beginadjchar("y",5,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.1u#,space*0.1u#);

% construction %
x1=x4=leftstemloc;
x3=w-x1;
x2=.5(x3+x1);
y2=0;
y1=y3=bar3;
y4=-bar3;

% draw %
draw z1--z2;
draw z3--z4;

% composite glyphs %
charanchortops_[charcode]=(.5w,5/6cap);

penlabels(range 0 thru 30);

endchar;