% box dimension definition %
beginadjchar(24,2.75,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.1u#,space*0.1u#);

% construction %
x4=x5=leftstemloc;
x1=x8=w-x4;
x3=x6;
x2=x7;
y6=y7=0;
y5=y8=0.5bar1;
y1=y4=bar1;
y2=y3=1.5bar1;
z6=z5+whatever*dir(-ang); 
z7=z8+whatever*dir(ang); 

% draw %
draw z1--z2--z3--z4--z5--z6--z7--z8--cycle;

penlabels(range 0 thru 30);

endchar;