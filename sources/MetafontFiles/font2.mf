% dimension %
font_size:=10pt#;% font size  @hidden
ht#:=16pt#;      % box height @hidden
wd#:=10pt#;    % Box width
u#:=1pt#;      % unit widht 					$ 0.5 / 2
px#:=2pt#;     % pen width 					$ 0.1 / 2.8
py#:=.5pt#;     % pen height					$ 0.1 / 2.8

% proportion %
cap#:=1ht#;      % cap height  @hidden			$ 0.75 / 1
bar1#:=1/7cap#;  % @hidden
bar2#:=2/7cap#;  % @hidden
bar3#:=3/7cap#;  % @hidden
bar4#:=4/7cap#;  % @hidden
bar5#:=5/7cap#;  % @hidden
bar6#:=6/7cap#;  % @hidden
ang:=45;         % glyph angle setting           $ 0 / 360

% shape %
penang:=30;      % pen angle setting             $ 0 / 360
penshape:=1;     % 1=circle / 2=square / 3=razor
c=1;             % curve tension                 $ 1 / 20

% export %
sidebearing:=1;  % sidebearings (0) off, (1) on for .otf export

input fontbase;
input glyphs;
input ligkerndef;
bye;
