% additional parameters / hidden parameter list for metrics %
s#:=0u#;             % extra space
leftstemloc#:=0u#;	 % position of left stem
letter_fit#:=0u#;    % ad-hoc dimension that adds to all sidebearings
shrink_fit:=1u#;     % amount subtracted from w before each character in the font has been drawn
space:=3;            % letterspacing (0 = compress)

% sidebearings %
def normal_adjust_fit(expr left_adjustment,right_adjustment) =
 l := -hround(left_adjustment*hppp)-letter_fit#;
 interim xoffset := -l;
 charwd := charwd+2letter_fit#+left_adjustment+right_adjustment;
 r := l+hround(charwd*hppp)-shrink_fit;
% w := r-hround(right_adjustment*hppp)-letter_fit#;
w := 300;
enddef;

mode=luxo;
mode_setup;

% font infos %
font_quad:=10u#+0s#;
font_normal_space:=3u#+0s#;
font_normal_stretch:=0u#;
font_normal_shrink:=0u#;
font_coding_scheme:="T1";

% pixel conversions %
